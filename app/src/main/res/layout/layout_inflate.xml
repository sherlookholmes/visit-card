<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/cardview_light_background"
    android:elevation="2dp"
    app:cardCornerRadius="2dp"
    android:layoutDirection="rtl"
    android:layout_marginTop="@dimen/layout_padding"
    android:layout_marginLeft="@dimen/layout_padding"
    android:layout_marginRight="@dimen/layout_padding">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ImageView
        android:id="@+id/image"
        android:layout_width="@dimen/width_image_list_item"
        android:layout_height="@dimen/height_list_item"
        android:layout_marginBottom="@dimen/item_margin"
        android:layout_marginEnd="@dimen/layout_padding"
        android:layout_marginTop="@dimen/item_margin"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_launcher_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp" />

    <ui_element.MyTextView
        android:id="@+id/txt_title"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/item_heading_height"
        android:layout_marginEnd="0dp"
        android:layout_marginStart="@dimen/layout_padding"
        android:alpha="@dimen/subhedingalpha"
        android:gravity="right"
        android:paddingBottom="8dp"
        android:text="sdasdasdasdasd"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/item_heading_size"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/image" />

    <ui_element.MyTextView
        android:id="@+id/txt_province"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|bottom"
        android:alpha="@dimen/captionalpha"
        android:gravity="right"
        android:paddingTop="16dp"
        android:text="sdasdasdasdasd"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/item_caption_size"
        app:layout_constraintBottom_toTopOf="@+id/textView7"
        app:layout_constraintStart_toStartOf="@id/txt_title" />

    <ui_element.MyTextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alpha="@dimen/captionalpha"
        android:gravity="right"
        android:text="لحظاتی پیش در آذرشهر"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/item_caption_size"
        app:layout_constraintBottom_toBottomOf="@+id/image"
        app:layout_constraintRight_toRightOf="@id/txt_title" />

    <LinearLayout
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginEnd="@dimen/layout_mines_padding"
        android:layout_marginStart="@dimen/layout_mines_padding"
        android:alpha="0.12"
        android:background="@color/colorBlack"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/lin_main"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="0dp"
        android:layout_marginEnd="@dimen/layout_mines_padding"
        android:layout_marginStart="@dimen/layout_mines_padding"
        android:layout_marginTop="0dp"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>
